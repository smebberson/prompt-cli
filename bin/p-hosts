#!/usr/bin/env node

var program = require('commander');

program
	.version('0.0.1');

program
	.command('list', 'list all host entries')
	.command('add', 'add a new host entry')
	.command('remove', 'remove a host entry');

program.parse(process.argv);

if (!program.runningCommand) {
	program.help();
}