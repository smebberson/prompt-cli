#!/usr/bin/env node

var program = require('commander');

program
	.version('0.1.0');

program
	.command('hosts', 'add, remove and edit hosts');

program
	.command('init <url> <path>', 'Create a new folder at path with the contents of the repository at url.');

program.parse(process.argv);

if (!program.runningCommand) {
	program.help();
}